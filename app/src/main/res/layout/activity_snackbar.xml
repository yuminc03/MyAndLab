<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/clickme"
    tools:context=".ch07menu.SnackbarActivity">

    <Button
        android:id="@+id/showmethedialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대화상자 볼래?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/showmelistdialog"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </Button>

    <Button
        android:id="@+id/showmelistdialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목록 대화상자 보기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showmethedialog" />

</androidx.constraintlayout.widget.ConstraintLayout>